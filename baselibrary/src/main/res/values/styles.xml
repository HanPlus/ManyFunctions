<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--状态栏颜色-->
        <item name="colorPrimary">@color/colorGrey_dark</item>
        <!--标题栏颜色-->
        <item name="colorPrimaryDark">@color/colorGrey_dark</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/colorWhite_dark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorGrey_dark</item>
        <!--标题栏上的Title颜色-->
        <item name="android:textColorPrimary">@color/colorGrey_dark</item>
        <!--是否有标题栏-->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="BigNiceDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMinor">100%</item>
        <!-- dialog 背景颜色，默认是白色-->
        <item name="android:colorBackground">@color/colorWhite_light</item>
    </style>
    <style name="NormalNiceDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMinor">80%</item>
        <!-- dialog 背景颜色，默认是白色-->
        <item name="android:colorBackground">@color/colorWhite_light</item>
    </style>
    <style name="SmallNiceDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMinor">50%</item>
        <!-- dialog 背景颜色，默认是白色-->
        <item name="android:colorBackground">@color/colorWhite_light</item>
    </style>

    <style name="SmallerNiceDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMinor">25%</item>
        <!-- dialog 背景颜色，默认是白色-->
        <item name="android:colorBackground">@color/colorWhite_light</item>
    </style>
</resources>
