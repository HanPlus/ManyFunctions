<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseCircleProgress">
        <attr name="circleColor" format="reference|color" />
        <attr name="progressColor" format="reference|color"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="textSize" format="float"/>
        <attr name="startText" format="string"/>
        <attr name="ingText" format="string"/>
        <attr name="successText" format="string"/>
        <attr name="failedText" format="string"/>
        <attr name="cancelText" format="string"/>
        <attr name="pauseText" format="string"/>
        <attr name="showNumProgress" format="boolean"/>
        <attr name="isNoProgress" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleLoadingView">
        <attr name="out_progress_color" format="color" />
        <attr name="in_progress_color" format="color" />
        <attr name="has_in_progress" format="boolean" />
        <attr name="width" format="float"/>
        <attr name="out_angle" format="float"/>
        <attr name="in_angle" format="float"/>
    </declare-styleable>

    <declare-styleable name="JEditTextView">
        <attr name="right_pic" format="reference" />
    </declare-styleable>

    <declare-styleable name="LinesLoadingView">
        <attr name="lines_color" format="color" />
        <attr name="rate" format="float" />
    </declare-styleable>

    <declare-styleable name="JItemView">
        <attr name="view_type" format="dimension">
            <!-- 默认设置条 -->
            <enum name="setting" value="0" />
            <!-- 进入条/返回条-->
            <enum name="normal" value="1" />
        </attr>
        <attr name="left_text" format="string" />
        <attr name="right_text" format="string" />
        <attr name="middle_text" format="string"/>
        <attr name="left_text_color" format="color" />
        <attr name="right_text_color" format="color" />
        <attr name="middle_text_color" format="color"/>
        <attr name="left_img" format="reference"/>
        <attr name="right_img" format="reference"/>
        <attr name="show_divider" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="BaseDivider">
        <attr name="divider_width" format="dimension">
            <!-- 前后都有的线 -->
            <enum name="head_and_foot" value="0" />
            <!-- 前面缩进的分割线 -->
            <enum name="no_head" value="1" />
            <!-- 后面缩进的分割线 -->
            <enum name="no_foot" value="2" />
            <!-- 前后都缩进的分割线-->
            <enum name="no_head_no_foot" value="3" />
        </attr>
        <attr name="divider_type" format="dimension">
            <!-- 普通分割线-->
            <enum name="normal" value="4" />
            <!-- 向下的阴影分割线 -->
            <enum name="down_shadow" value="5" />
            <!-- 向上的阴影分割线-->
            <enum name="up_shadow" value="6" />
        </attr>
        <attr name="color" format="color"/>
        <attr name="shadow_color" format="color"/>
    </declare-styleable>
</resources>