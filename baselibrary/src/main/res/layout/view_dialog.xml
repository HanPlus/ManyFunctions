<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <com.nice.baselibrary.base.view.NiceTitleBar
        android:id="@+id/bt_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/biggest_space"
        />

    <com.nice.baselibrary.base.view.NiceTextView
        android:id="@+id/btv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="@dimen/normal_space"
        android:text="message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/biggest_space"
        android:orientation="horizontal"
        >
        <com.nice.baselibrary.base.view.NiceTextView
            android:id="@+id/btv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="cancel"/>
        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="match_parent"
            android:background="@color/colorGrey_light"/>
        <com.nice.baselibrary.base.view.NiceTextView
            android:id="@+id/btv_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="confirm"/>
    </LinearLayout>

</LinearLayout>