<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_test_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热修复" />

        <include layout="@layout/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_upload_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片上传" />

            <ImageView
                android:id="@+id/img_head_view"
                android:layout_width="65dp"
                android:layout_height="65dp" />

            <com.nice.baselibrary.widget.NiceTextView
                android:id="@+id/ntv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <include layout="@layout/line_view" />

        <Button
            android:id="@+id/btn_app_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppInfo"
            android:textAllCaps="false" />

        <include layout="@layout/line_view" />

        <Button
            android:id="@+id/btn_app_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAllCaps="false" />

        <include layout="@layout/line_view" />

        <Button
            android:id="@+id/btn_app_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="video"
            android:textAllCaps="false" />

        <include layout="@layout/line_view" />

        <Button
            android:id="@+id/btn_app_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textAllCaps="false" />
        <include layout="@layout/line_view" />

        <Button
            android:id="@+id/btn_app_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>