<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/normal_space"
    android:paddingRight="@dimen/normal_space">
    <com.nice.baselibrary.base.view.NiceTextView
        android:id="@+id/btv_download_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:maxLines="1"
        android:maxEms="16"
        android:layout_weight="1"
        />
    <com.nice.baselibrary.base.view.NiceTextView
        android:id="@+id/btv_download_item_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="url"

        android:background="@drawable/edit_base_circle_background"
        android:maxLines="1"
        android:maxEms="16"
        android:layout_marginStart="@dimen/normal_space"
        />
    <com.nice.baselibrary.base.view.NiceCircleProgress
        android:id="@+id/cpb_download_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        />

</LinearLayout>